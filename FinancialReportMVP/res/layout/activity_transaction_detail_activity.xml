<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TransactionDetailActivity" >

    <TextView
        android:id="@+id/tran_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="29dp"
        android:text="tran_name" />

    <TextView
        android:id="@+id/tran_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tran_name"
        android:layout_below="@+id/tran_name"
        android:layout_marginTop="27dp"
        android:text="tran_date" />

    <TextView
        android:id="@+id/tran_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tran_date"
        android:layout_below="@+id/tran_date"
        android:layout_marginTop="26dp"
        android:text="tran_amount" />

    <TextView
        android:id="@+id/tran_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tran_amount"
        android:layout_below="@+id/tran_amount"
        android:layout_marginTop="26dp"
        android:text="tran_type" />

    <TextView
        android:id="@+id/tran_bkname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tran_type"
        android:layout_centerVertical="true"
        android:text="bkname" />

    <TextView
        android:id="@+id/tran_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tran_bkname"
        android:layout_below="@+id/tran_bkname"
        android:layout_marginTop="32dp"
        android:text="tran_status" />

</RelativeLayout>